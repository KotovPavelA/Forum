@model SectionsListViewModel

<div class="list-group">
    @for (int i = 0; i < Model.Sections.Count; i++)
    {
        if (i % 2 == 0)
        {
            <a class="list-group-item list-group-item-primary" asp-controller="Section" asp-action="Section" asp-route-id="@Model.Sections[i].Id">@Model.Sections[i].Name</a> 
        }
        else
        {
            <a class="list-group-item list-group-item-action" asp-controller="Section" asp-action="Section" asp-route-id="@Model.Sections[i].Id">@Model.Sections[i].Name</a>
        }

    }



</div>
